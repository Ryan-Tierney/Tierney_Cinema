<h1> Add a Review for <%= @movie.title %> </h1> 

<%= form_for @review, url:"/movies/#{@movie.id}/reviews" do |f| %> 

    <%= f.label :title %>: 
    <br>
    <br>
    <%= f.text_field :title %>
    <br>
    <br>
    <%= f.label :content %>: 
    <br>
    <br>
    <%= f.text_area :content %> 
    <br>
    <br>
    <%= f.submit %> 
<% end %> 